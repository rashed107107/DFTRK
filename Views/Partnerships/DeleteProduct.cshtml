@model DFTRK.Models.RetailerPartnerProduct

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Partners</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.PartnershipId">@Model.Partnership?.PartnershipName</a></li>
            <li class="breadcrumb-item active">Delete Product</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Product
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this product? This action cannot be undone.
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="text-danger">@Model.Name</h5>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>Category:</strong> @Model.Category?.Name
                                    </p>
                                    <p class="mb-2">
                                        <strong>Purchase Price:</strong> <span class="text-success">$@Model.CostPrice.ToString("F2")</span>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Partnership:</strong> @Model.Partnership?.PartnershipName
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                
                                    </p>
                                    <p class="mb-2">
                                        <strong>Status:</strong> 
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </p>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mt-3">
                                    <strong>Description:</strong>
                                    <p class="text-muted">@Model.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteProduct" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash me-2"></i>Yes, Delete Product
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.PartnershipId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 