@model DFTRK.Models.WholesalerProduct

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Product from Inventory
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-warning me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this product from your inventory? This action cannot be undone.
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Product?.ImageUrl))
                            {
                                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded">
                            }
                            else
                            {
                                <div class="bg-light p-4 text-center rounded">
                                    <i class="bi bi-image display-4 text-muted"></i>
                                    <p class="text-muted mt-2">No Image</p>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h5>@Model.Product?.Name</h5>
                            <p class="text-muted mb-2">
                                <strong>Category:</strong> @Model.Product?.Category?.Name
                            </p>
                            <p class="mb-2">
                                <strong>Your Price:</strong> <span class="text-success">$@Model.Price.ToString("F2")</span>
                            </p>
                            <p class="mb-2">
                                <strong>Stock Quantity:</strong> <span class="badge bg-info">@Model.StockQuantity units</span>
                            </p>
                            <p class="mb-2">
                                <strong>Status:</strong> 
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Product?.Description))
                            {
                                <p class="mb-2">
                                    <strong>Description:</strong> @Model.Product.Description
                                </p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash me-2"></i>Yes, Delete Product
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 