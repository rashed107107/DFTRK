@model DFTRK.ViewModels.WholesalerProductStockViewModel

@{
    ViewData["Title"] = "Update Stock";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Update Stock</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Product</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Model.ProductName</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p class="mb-0">Current stock: <strong>@Model.CurrentStock</strong> units</p>
                    </div>

                    <form asp-action="UpdateStock" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductName" />
                        <input type="hidden" asp-for="CurrentStock" />
                        
                        <div class="mb-3">
                            <label asp-for="QuantityToAdd" class="form-label">Quantity to Add/Remove</label>
                            <div class="input-group">
                                <input asp-for="QuantityToAdd" class="form-control" />
                                <span class="input-group-text">units</span>
                            </div>
                            <span asp-validation-for="QuantityToAdd" class="text-danger"></span>
                            <div class="form-text">Use positive numbers to add stock, negative numbers to remove stock.</div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Stock</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 