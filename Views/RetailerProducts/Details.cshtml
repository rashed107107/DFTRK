@model DFTRK.Models.RetailerProduct

@{
    ViewData["Title"] = "Product Details";
    var profitMargin = Math.Round((Model.SellingPrice - Model.PurchasePrice) / Model.PurchasePrice * 100, 2);
    var profitClass = profitMargin < 10 ? "text-danger" : 
                     profitMargin < 20 ? "text-warning" : 
                     "text-success";
    
    var hasMultipleEntries = ViewBag.HasMultipleEntries != null && ViewBag.HasMultipleEntries;
    var totalQuantity = hasMultipleEntries ? ViewBag.TotalQuantity : Model.StockQuantity;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left me-2"></i>Back to Inventory
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mb-4">
            @TempData["Error"]
        </div>
    }

    @if (Model.WholesalerProduct?.Product == null)
    {
        <div class="alert alert-warning">
            <h5 class="alert-heading">Product data unavailable</h5>
            <p>This product's information is unavailable. It may have been removed by the wholesaler.</p>
            <hr>
            <a asp-action="Index" class="btn btn-primary">Return to Inventory</a>
        </div>
    }
    else
    {
        @if (hasMultipleEntries)
        {
            <div class="alert alert-info mb-4">
                <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Multiple Inventory Records</h5>
                <p>This product appears in multiple inventory records. The total quantity across all records is <strong>@totalQuantity</strong>.</p>
                <p>Consider using the "Consolidate Inventory" feature to merge these records for easier management.</p>
            </div>
        }

        <div class="row">
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(Model.WholesalerProduct.Product.ImageUrl))
                {
                    <img src="@Model.WholesalerProduct.Product.ImageUrl" alt="@Model.WholesalerProduct.Product.Name" class="img-fluid rounded" />
                }
                else
                {
                    <div class="bg-light text-center p-5 rounded">
                        <i class="bi bi-image" style="font-size: 5rem;"></i>
                        <p class="mt-3">No image available</p>
                    </div>
                }
            </div>
            <div class="col-md-7">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">@Model.WholesalerProduct.Product.Name</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Category</h6>
                                <p>@(Model.WholesalerProduct.Product.Category?.Name ?? "Unknown")</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Supplier</h6>
                                <p>@(Model.WholesalerProduct.Wholesaler?.BusinessName ?? "Unknown")</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <h6 class="text-muted mb-1">Description</h6>
                                <p>@Model.WholesalerProduct.Product.Description</p>
                            </div>
                        </div>

                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Purchase Price</h6>
                                <p class="fs-5">$@Model.PurchasePrice.ToString("F2")</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Selling Price</h6>
                                <p class="fs-5">$@Model.SellingPrice.ToString("F2")</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Stock Quantity</h6>
                                @if (hasMultipleEntries)
                                {
                                    <div>
                                        <p>
                                            <span class="badge bg-secondary">This record: @Model.StockQuantity units</span>
                                        </p>
                                        <p>
                                            @if (totalQuantity > 10)
                                            {
                                                <span class="badge bg-success">Total: @totalQuantity units</span>
                                            }
                                            else if (totalQuantity > 0)
                                            {
                                                <span class="badge bg-warning">Total: @totalQuantity units</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Total: Out of stock</span>
                                            }
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    @if (Model.StockQuantity > 10)
                                    {
                                        <p><span class="badge bg-success">@Model.StockQuantity units</span></p>
                                    }
                                    else if (Model.StockQuantity > 0)
                                    {
                                        <p><span class="badge bg-warning">@Model.StockQuantity units</span></p>
                                    }
                                    else
                                    {
                                        <p><span class="badge bg-danger">Out of stock</span></p>
                                    }
                                }
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Profit Margin</h6>
                                <p><span class="badge @(profitClass == "text-danger" ? "bg-danger" : 
                                                     profitClass == "text-warning" ? "bg-warning" : 
                                                     "bg-success")">
                                    @profitMargin% margin
                                </span></p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-muted mb-1">Notes</h6>
                                    <p>@Model.Notes</p>
                                </div>
                            </div>
                        }

                        <hr />

                        @if (Model.WholesalerProduct.Wholesaler != null)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <h6 class="text-muted mb-1">Supplier Information</h6>
                                    <p class="mb-1"><strong>Company:</strong> @Model.WholesalerProduct.Wholesaler.BusinessName</p>
                                    <p class="mb-1"><strong>Email:</strong> @Model.WholesalerProduct.Wholesaler.Email</p>
                                    @if (!string.IsNullOrEmpty(Model.WholesalerProduct.Wholesaler.PhoneNumber))
                                    {
                                        <p><strong>Phone:</strong> @Model.WholesalerProduct.Wholesaler.PhoneNumber</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil me-2"></i>Edit Product
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 