@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Reports Dashboard</h1>
            <p class="text-muted">View and analyze your business data</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Sales Reports</h5>
                    <p class="card-text flex-grow-1">Analyze sales performance by date range, including order status, value, and trends.</p>
                    <a asp-action="Sales" class="btn btn-primary mt-auto">
                        <i class="bi bi-graph-up me-2"></i>View Sales Reports
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Payment Reports</h5>
                    <p class="card-text flex-grow-1">Analyze payment data by payment method, date, and transaction status.</p>
                    <a asp-action="Payments" class="btn btn-success mt-auto">
                        <i class="bi bi-credit-card me-2"></i>View Payment Reports
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">User Reports</h5>
                    <p class="card-text flex-grow-1">Analyze user activity, including registration trends and spending patterns.</p>
                    <a asp-action="Users" class="btn btn-info text-white mt-auto">
                        <i class="bi bi-people me-2"></i>View User Reports
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card h-100 border-warning">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-warning">Financial Performance Report</h5>
                        <p class="card-text flex-grow-1">Analyze platform revenue, transaction fees, and accounts receivable aging.</p>
                        <a asp-action="Financial" class="btn btn-warning mt-auto">
                            <i class="bi bi-cash-stack me-2"></i>View Financial Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Use date filters in reports to narrow down your analysis to specific time periods.
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Export reports as needed for your financial records or business planning.
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Monitor user activity reports to identify your most active wholesalers and retailers.
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="list-group-item">
                                <i class="bi bi-gear text-warning me-2"></i>
                                <a asp-action="UpdatePaymentStatuses" class="btn btn-warning btn-sm">
                                    <i class="bi bi-arrow-repeat me-1"></i>Update Payment Statuses
                                </a>
                                <small class="text-muted ms-2">Fix payment statuses for all transactions</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 