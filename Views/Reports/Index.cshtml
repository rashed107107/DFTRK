@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Reports Dashboard</h1>
            <p class="text-muted">Simple and clear business reports</p>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">üë• Users Report</h5>
                        <p class="card-text flex-grow-1">View user registration trends and activity summary.</p>
                        <a asp-action="Users" class="btn btn-primary mt-auto">
                            <i class="bi bi-people me-2"></i>View Users
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">üí∞ Financial Report</h5>
                        <p class="card-text flex-grow-1">Platform revenue and transaction summary.</p>
                        <a asp-action="Financial" class="btn btn-success mt-auto">
                            <i class="bi bi-cash-stack me-2"></i>View Financial
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">üîß Maintenance</h5>
                        <p class="card-text flex-grow-1">System maintenance and data fixes.</p>
                        <a asp-action="UpdatePaymentStatuses" class="btn btn-warning mt-auto">
                            <i class="bi bi-arrow-repeat me-2"></i>Fix Payment Status
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("Wholesaler"))
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">üìä Sales & Outstanding</h5>
                        <p class="card-text flex-grow-1">View your sales and payment status.</p>
                        <a asp-action="WholesalerSalesOutstanding" class="btn btn-primary mt-auto">
                            <i class="bi bi-graph-up me-2"></i>View Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("Retailer"))
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">üõí Purchase History</h5>
                        <p class="card-text flex-grow-1">View your purchase history and payments.</p>
                        <a asp-action="RetailerPurchases" class="btn btn-primary mt-auto">
                            <i class="bi bi-cart-check me-2"></i>View Purchases
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìù Quick Tips</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-info-circle text-primary me-2"></i>
                                    Use date filters to view specific time periods
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-info-circle text-primary me-2"></i>
                                    Reports show real-time data from your transactions
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-info-circle text-primary me-2"></i>
                                    Financial data includes all completed orders
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-info-circle text-primary me-2"></i>
                                    Contact support if you see any data discrepancies
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 