@model DFTRK.ViewModels.RetailerReportViewModel

@{
    ViewData["Title"] = "Retailer Performance Report";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h1>My Performance Report</h1>
                <a asp-controller="Home" asp-action="RetailerDashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
            <p class="text-muted">Track your business performance and spending</p>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="RetailerPerformance" method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">@Model.TotalOrders</h2>
                        <i class="bi bi-cart-check fs-1"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-light text-dark">@Model.CompletedOrders Completed</span>
                        <span class="badge bg-light text-dark">@Model.PendingOrders Pending</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Spent</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">$@Model.ActualAmountSpent.ToString("N0")</h2>
                        <i class="bi bi-cash-stack fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <h5 class="card-title">Outstanding Balance</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">$@Model.OutstandingBalance.ToString("N0")</h2>
                        <i class="bi bi-credit-card fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Payment Status</h5>
                    <div class="mt-2">
                        @if (Model.OutstandingBalance <= 0)
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle me-2"></i>All payments up to date
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-circle me-2"></i>You have pending payments
                            </div>
                            <a asp-controller="Payments" asp-action="Index" class="btn btn-light btn-sm mt-2">View Payments</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Wholesalers and Recent Orders -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Top Wholesalers</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopWholesalers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Wholesaler</th>
                                        <th class="text-center">Orders</th>
                                        <th class="text-end">Amount Spent</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var wholesaler in Model.TopWholesalers)
                                    {
                                        <tr>
                                            <td>@wholesaler.WholesalerName</td>
                                            <td class="text-center">@wholesaler.OrderCount</td>
                                            <td class="text-end">$@wholesaler.TotalSpent.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clipboard-data me-2"></i>Payment Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.PaymentStatusChart.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.PaymentStatusChart)
                            {
                                <div class="col-6 mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span>@(item.Label == "Completed" ? "Paid" : item.Label)</span>
                                        <span class="text-muted">@item.Count orders</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        @{
                                            var statusColor = item.Label switch
                                            {
                                                "Completed" => "bg-success",
                                                "PartiallyPaid" => "bg-info",
                                                "Pending" => "bg-warning",
                                                "Refunded" => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                            var percentage = Model.ActualAmountSpent > 0 ? (int)Math.Min(100, Math.Round((item.Value / Model.ActualAmountSpent) * 100)) : 0;
                                        }
                                        <div class="progress-bar @statusColor" role="progressbar" style="width: @percentage%;" 
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                            $@item.Value.ToString("N0")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="mb-0 text-muted">No payment data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Recent Orders</h5>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All Orders</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Paid</th>
                                        <th>Remaining</th>
                                        <th>Order Status</th>
                                        <th>Payment Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId">#@order.OrderId</a></td>
                                            <td>@order.OrderDate.ToShortDateString()</td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            <td class="text-success">$@order.AmountPaid.ToString("F2")</td>
                                            <td class="@(order.RemainingAmount > 0 ? "text-danger" : "text-success")">
                                                $@order.RemainingAmount.ToString("F2")
                                            </td>
                                            <td>
                                                @switch (order.OrderStatus)
                                                {
                                                    case DFTRK.Models.OrderStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Processing:
                                                        <span class="badge bg-info">Processing</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Shipped:
                                                        <span class="badge bg-primary">Shipped</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Delivered:
                                                        <span class="badge bg-success">Delivered</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Completed:
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.OrderStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (order.PaymentStatus)
                                                {
                                                    case DFTRK.Models.TransactionStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.PartiallyPaid:
                                                        <span class="badge bg-info">Partially Paid</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Completed:
                                                        <span class="badge bg-success">Paid</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Failed:
                                                        <span class="badge bg-danger">Failed</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Refunded:
                                                        <span class="badge bg-secondary">Refunded</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.PaymentStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No orders found for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 