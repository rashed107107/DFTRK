@model DFTRK.ViewModels.WholesalerReportViewModel

@{
    ViewData["Title"] = "Wholesaler Performance Report";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h1>My Performance Report</h1>
                <a asp-controller="Home" asp-action="WholesalerDashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
            <p class="text-muted">Track your business performance and revenue</p>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="WholesalerPerformance" method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">@Model.TotalOrders</h2>
                        <i class="bi bi-cart-check fs-1"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-light text-dark">@Model.CompletedOrders Completed</span>
                        <span class="badge bg-light text-dark">@Model.PendingOrders Pending</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">$@Model.ActualRevenue.ToString("N0")</h2>
                        <i class="bi bi-cash-stack fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <h5 class="card-title">Outstanding Payments</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="display-4">$@Model.OutstandingPayments.ToString("N0")</h2>
                        <i class="bi bi-credit-card fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Collection Rate</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        @{
                                            var collectionRate = Model.TotalOrderValue > 0
                    ? (int)Math.Min(100, Math.Round(((Model.ActualRevenue) / Model.TotalOrderValue) * 100)) 
                                : 0;
                        }
                        <h2 class="display-4">@collectionRate%</h2>
                        <i class="bi bi-percent fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products and Revenue Chart -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Top Selling Products</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.TopProducts)
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td class="text-center">@product.QuantitySold</td>
                                            <td class="text-end">$@product.TotalRevenue.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Revenue by Month</h5>
                </div>
                <div class="card-body">
                    @if (Model.RevenueChart.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.RevenueChart)
                            {
                                <div class="col-6 mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span>@item.Label</span>
                                        <span class="text-muted">@item.Count orders</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        @{
                                            var percentage = Model.ActualRevenue > 0 ? (int)Math.Min(100, Math.Round((item.Value / Model.ActualRevenue) * 100)) : 0;
                                        }
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @percentage%;" 
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                            $@item.Value.ToString("N0")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="mb-0 text-muted">No revenue data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Retailers -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-shop me-2"></i>Top Retailers</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopRetailers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Retailer</th>
                                        <th class="text-center">Orders</th>
                                        <th class="text-end">Revenue</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var retailer in Model.TopRetailers)
                                    {
                                        <tr>
                                            <td>@retailer.RetailerName</td>
                                            <td class="text-center">@retailer.OrderCount</td>
                                            <td class="text-end">$@retailer.TotalRevenue.ToString("N2")</td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View Orders
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No retailer data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Recent Orders</h5>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All Orders</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Received</th>
                                        <th>Outstanding</th>
                                        <th>Order Status</th>
                                        <th>Payment Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId">#@order.OrderId</a></td>
                                            <td>@order.OrderDate.ToShortDateString()</td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            <td class="text-success">$@order.AmountPaid.ToString("F2")</td>
                                            <td class="@(order.RemainingAmount > 0 ? "text-danger" : "text-success")">
                                                $@order.RemainingAmount.ToString("F2")
                                            </td>
                                            <td>
                                                @switch (order.OrderStatus)
                                                {
                                                    case DFTRK.Models.OrderStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Processing:
                                                        <span class="badge bg-info">Processing</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Shipped:
                                                        <span class="badge bg-primary">Shipped</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Delivered:
                                                        <span class="badge bg-success">Delivered</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Completed:
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case DFTRK.Models.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.OrderStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (order.PaymentStatus)
                                                {
                                                    case DFTRK.Models.TransactionStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.PartiallyPaid:
                                                        <span class="badge bg-info">Partially Paid</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Completed:
                                                        <span class="badge bg-success">Paid</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Failed:
                                                        <span class="badge bg-danger">Failed</span>
                                                        break;
                                                    case DFTRK.Models.TransactionStatus.Refunded:
                                                        <span class="badge bg-secondary">Refunded</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.PaymentStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No orders found for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 