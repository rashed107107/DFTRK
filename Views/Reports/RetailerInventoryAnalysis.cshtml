@model DFTRK.ViewModels.RetailerInventoryAnalysisViewModel

@{
    ViewData["Title"] = "Inventory Analysis";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-graph-up me-2"></i>Inventory Analysis</h1>
                    <p class="text-muted">Deep insights into your purchasing patterns and supplier relationships</p>
                </div>
                <a asp-controller="Home" asp-action="RetailerDashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="RetailerInventoryAnalysis" method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Analysis -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Spending by Category</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategoryAnalysis.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-center">Products</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Total Spent</th>
                                        <th class="text-end">Avg Order Value</th>
                                        <th class="text-center">Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var totalSpent = Model.CategoryAnalysis.Sum(c => c.TotalSpent);
                                    }
                                    @foreach (var category in Model.CategoryAnalysis)
                                    {
                                        var percentage = totalSpent > 0 ? (category.TotalSpent / totalSpent * 100) : 0;
                                        <tr>
                                            <td><strong>@category.CategoryName</strong></td>
                                            <td class="text-center">@category.ProductCount</td>
                                            <td class="text-center">@category.TotalQuantity</td>
                                            <td class="text-end">$@category.TotalSpent.ToString("N2")</td>
                                            <td class="text-end">$@category.AvgOrderValue.ToString("N2")</td>
                                            <td class="text-center">
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                                        <div class="progress-bar bg-primary" role="progressbar" 
                                                             style="width: @percentage%;" aria-valuenow="@percentage" 
                                                             aria-valuemin="0" aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                    <span class="text-muted">@percentage.ToString("F1")%</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <p class="text-muted mb-0">No category data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Product Performance and Monthly Trends -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Top Product Performance</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.ProductAnalysis.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Qty</th>
                                        <th class="text-end">Spent</th>
                                        <th class="text-center">Orders</th>
                                        <th class="text-center">Reorder Status</th>
                                        <th class="text-center">Last Order</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.ProductAnalysis.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@product.ProductName</strong>
                                                    <br><small class="text-muted">@product.CategoryName</small>
                                                </div>
                                            </td>
                                            <td class="text-center">@product.TotalQuantity</td>
                                            <td class="text-end">$@product.TotalSpent.ToString("N2")</td>
                                            <td class="text-center">@product.OrderCount</td>
                                            <td class="text-center">
                                                @{
                                                    var statusColor = product.ReorderStatus switch
                                                    {
                                                        "Frequent" => "success",
                                                        "Regular" => "info",
                                                        "Infrequent" => "warning",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusColor">@product.ReorderStatus</span>
                                            </td>
                                            <td class="text-center">
                                                <small>@product.LastOrderDate.ToString("MMM dd")</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <p class="mb-0 text-muted">No product data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Monthly Trends</h5>
                </div>
                <div class="card-body">
                    @if (Model.MonthlyTrends.Any())
                    {
                        @foreach (var trend in Model.MonthlyTrends.TakeLast(6))
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span><strong>@trend.MonthDisplay</strong></span>
                                    <span class="text-muted">@trend.UniqueProducts products</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small>$@trend.TotalSpent.ToString("N0")</small>
                                    <small>@trend.TotalQuantity items</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    @{
                                        var maxSpent = Model.MonthlyTrends.Max(t => t.TotalSpent);
                                        var percentage = maxSpent > 0 ? (int)(trend.TotalSpent / maxSpent * 100) : 0;
                                    }
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%;"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="mb-0 text-muted">No trend data available.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Supplier Analysis -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Supplier Performance Analysis</h5>
                </div>
                <div class="card-body">
                    @if (Model.SupplierAnalysis.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Supplier</th>
                                        <th class="text-center">Orders</th>
                                        <th class="text-center">Product Variety</th>
                                        <th class="text-end">Total Spent</th>
                                        <th class="text-end">Avg Delivery Value</th>
                                        <th class="text-center">Reorder Frequency</th>
                                        <th class="text-center">Reliability</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var supplier in Model.SupplierAnalysis)
                                    {
                                        <tr>
                                            <td><strong>@supplier.SupplierName</strong></td>
                                            <td class="text-center">@supplier.OrderCount</td>
                                            <td class="text-center">@supplier.ProductVariety products</td>
                                            <td class="text-end">$@supplier.TotalSpent.ToString("N2")</td>
                                            <td class="text-end">$@supplier.AvgDeliveryValue.ToString("N2")</td>
                                            <td class="text-center">@supplier.ReorderFrequency.ToString("F1")/month</td>
                                            <td class="text-center">
                                                @{
                                                    var reliabilityColor = supplier.ReliabilityRating switch
                                                    {
                                                        "High" => "success",
                                                        "Medium" => "warning",
                                                        _ => "danger"
                                                    };
                                                }
                                                <span class="badge bg-@reliabilityColor">@supplier.ReliabilityRating</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <p class="text-muted mb-0">No supplier data available for the selected period.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Insights -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Quick Insights</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (Model.CategoryAnalysis.Any())
                        {
                            var topCategory = Model.CategoryAnalysis.First();
                            <div class="col-md-4">
                                <div class="border-start border-primary ps-3">
                                    <h6 class="text-primary">Top Category</h6>
                                    <p class="mb-0"><strong>@topCategory.CategoryName</strong> accounts for $@topCategory.TotalSpent.ToString("N0") of your spending</p>
                                </div>
                            </div>
                        }
                        @if (Model.ProductAnalysis.Any())
                        {
                            var frequentReorders = Model.ProductAnalysis.Count(p => p.ReorderStatus == "Frequent");
                            <div class="col-md-4">
                                <div class="border-start border-success ps-3">
                                    <h6 class="text-success">Reorder Patterns</h6>
                                    <p class="mb-0"><strong>@frequentReorders products</strong> have frequent reorder patterns</p>
                                </div>
                            </div>
                        }
                        @if (Model.SupplierAnalysis.Any())
                        {
                            var reliableSuppliers = Model.SupplierAnalysis.Count(s => s.ReliabilityRating == "High");
                            <div class="col-md-4">
                                <div class="border-start border-warning ps-3">
                                    <h6 class="text-warning">Supplier Diversity</h6>
                                    <p class="mb-0"><strong>@reliableSuppliers of @Model.SupplierAnalysis.Count</strong> suppliers have high reliability</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for interactive features
        $(document).ready(function() {
            // Add tooltips to progress bars
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
} 